<?php $__env->startSection('title', 'Gallery'); ?>
<?php $__env->startSection('description', 'Folders'); ?>

<?php $__env->startSection('content'); ?>
    <seection>
        <div class="container-fluid container-fullw bg-white">
            <div class="row">
                <a href="<?php echo e(route('admin.folders.create')); ?>" class="btn btn-success pull-right"><i class="fa fa-pencil"></i> Create new</a>
                <table class="table table-striped">
                    <thead>
                        <th>Folder</th>
                        <th>Date</th>
                        <th>Photos</th>
                        <th width="5%"></th>
                        <th width="3%"></th>
                        <th width="5%"></th>
                    </thead>
                    <tbody>
                    <?php if(count($folders)): ?>
                        <?php foreach($folders as $folder): ?>
                            <tr>
                                <td><?php echo e(ucfirst($folder->title)); ?></td>
                                <td><?php echo e(\Carbon\Carbon::parse($folder->date)->diffForHumans()); ?></td>
                                <td><div class="btn btn-success btn-sm"><i class="fa fa-photo"></i> <?php echo e(count($folder->photos)); ?> Photos</div></td>
                                <td><div class="btn btn-primary btn-sm"><a style="color: white" href="gallery/upload/<?php echo e($folder->slug); ?>"><i class="fa fa-photo"></i> Add New Photos</a></div></td>
                                <td><div class="btn btn-primary btn-sm"><a style="color: white" href="<?php echo e(route('admin.folders.edit', $folder->slug)); ?>"><i class="fa fa-pencil"></i> Edit</a></div></td>
                                <td>
                                    <?php echo Form::open(['method' => 'DELETE', 'route' => ['admin.folders.destroy', $folder->slug]]); ?>

                                        <button class="btn btn-danger btn-sm" onclick="spin(this)" style="color: white" href="#"><i class="fa fa-close"></i> Remove</button>
                                    <?php echo Form::close(); ?>

                                </td>
                            </tr>
                        <?php endforeach; ?>
                    <?php else: ?>
                    <tr>
                        <td colspan="6">No Folders has been created..</td>
                    </tr>
                    <?php endif; ?>
                    </tbody>
                </table>

                <?php echo $folders->render(); ?>

            </div>
        </div>
    </seection>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('scripts'); ?>
    <script src="/js/app.js"></script>
    <script>
        jQuery(document).ready(function () {
            Main.init();
        });
        $('.is-date').datepicker;

        function spin(this1)
        {
            this1.closest("form").submit();
            this1.disabled=true;
            this1.innerHTML=`<i class="fa fa-spinner fa-spin"></i> Removing..`;
        }
    </script>
<?php $__env->stopSection(); ?>
<?php echo $__env->make('admin.layouts.master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>