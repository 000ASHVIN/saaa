<div id="venues" class="tab-pane fade">
    <?php if(count($event->AllVenues)): ?>
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <th>Title</th>
                <th>Address line one</th>
                <th>Address line two</th>
                <th>Status</th>
                <th>Dates</th>
                <th class="text-center">Update</th>
                <th class="text-center">Dates</th>
                <th class="text-center">Discard</th>
            </thead>
            <tbody>
                <?php foreach($event->AllVenues as $venue): ?>
                    <tr>
                        <td><?php echo e($venue->name); ?></td>
                        <td><?php echo e($venue->address_line_one); ?></td>
                        <td><?php echo e($venue->address_line_two); ?></td>
                        <td><?php echo e($venue->is_active ? "Active" : "Not Active"); ?></td>
                        <td class="text-left">
                            <?php if(count($venue->dates)): ?>
                                <?php foreach($venue->dates as $date): ?>
                                    <?php echo e($date->date); ?> <br>
                                <?php endforeach; ?>
                            <?php else: ?>
                                No dates available
                            <?php endif; ?>
                        </td>
                        <td class="text-center"><a href="#" data-target="#<?php echo e($venue->id); ?>_update" data-toggle="modal"><span class="label label-info"><i class="fa fa-pencil"></i></span></a></td>
                        <td class="text-center"><a href="#" data-target="#<?php echo e($venue->id); ?>_date_create" data-toggle="modal"><span class="label label-info"><i class="fa fa-calendar-o"></i></span></a></td>
                        <td class="text-center"><a data-confirm-content="Are you sure you want to delete selected venue" class="label label-info" href="<?php echo e(route('admin.event.venue.destroy', $venue->id)); ?>">X</a></td>
                    </tr>
                    <?php echo $__env->make('admin.event.includes.venues.update', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                    <?php echo $__env->make('admin.event.includes.dates.create', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                <?php endforeach; ?>
            </tbody>
        </table>
    <?php else: ?>
        <div class="alert alert-info">
            <p style="font-style: italic;">No venues for this event listed.</p>
