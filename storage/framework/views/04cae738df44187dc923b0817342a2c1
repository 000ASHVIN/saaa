<div class="form-group">
    <?php
        $tags = '';
        if(isset($question)) {
            if($question->faq_tags->count()) {
                $tags = implode(',', $question->faq_tags->pluck('title')->toArray());
            }
        }
    ?>
    <div class="form-group">
        <?php echo Form::label('faq_tags', 'Please Select Tag'); ?>

        <?php echo Form::input('text', 'faq_tags', $tags, ['class' => 'form-control', 'id'=>'faq_tags']); ?>

    </div> 
</div>

