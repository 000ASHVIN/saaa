<?php $__env->startSection('title', 'Synced Events'); ?>
<?php $__env->startSection('description', 'All synced events.'); ?>

<?php $__env->startSection('content'); ?>
    <section>
        <div class="container-fluid container-fullw padding-bottom-10 bg-white">
            <?php echo Form::open(['method' => 'post', 'route' => 'admin.event.search']); ?>

            <div class="form-group <?php if($errors->has('event_name')): ?> has-error <?php endif; ?>">
                <?php echo Form::label('event_name', 'Search Events'); ?>

                <?php echo Form::input('text', 'event_name', null, ['class' => 'form-control', 'placeholder' => 'Ethics Independence and NOCLAR']); ?>

                <?php if($errors->has('event_name')): ?> <p class="help-block"><?php echo e($errors->first('event_name')); ?></p> <?php endif; ?>
            </div>

            <button class="btn btn-primary" onclick="spin(this)"><i class="fa fa-search"></i> Search</button>
            <?php echo Form::close(); ?>

            <hr>
            
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Notifications</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <?php foreach($events as $event): ?>
                <tr>
                    <td><a class="label label-success" href="/admin/events/<?php echo e($event->id); ?>"><?php echo e($event->type); ?></a></td>
                    <td><a href="/admin/events/<?php echo e($event->id); ?>"><?php echo e($event->name); ?></a></td>
                    <td><?php echo e($event->start_date); ?></td>
                    <td><?php echo e($event->end_date); ?></td>
                    <td>
                        <?php if($event->notifications != null): ?>
                            <span><?php echo e($event->notifications->status_text); ?><br/> <?php echo e($event->notifications->schedule_date); ?></span>
                        <?php else: ?>
                            <span>Not Scheduled</span>
                        <?php endif; ?>
                    </td>
                    <td class="text-center"> <?php echo e(count($event->tickets)); ?></td>
                    <td>
                        <div class="btn-group">
                            <a href="/admin/synced_event/show/<?php echo e($event->slug); ?>" class="btn btn-primary dropdown-toggle btn-sm">
                                Edit
                            </a>
                        </div>
                    </td>
                </tr>
                <?php endforeach; ?>
                </tbody>
            </table>

            <div class="text-center">
                <?php if(count($events)): ?>
                    <?php echo $events->render(); ?>

                <?php endif; ?>
