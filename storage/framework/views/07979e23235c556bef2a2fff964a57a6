<?php $__env->startSection('scripts'); ?>
<script>
    $(document).ready(function(){
        var max=50;
        $('.price-clean p').each(function(){
            if($(this).height()>max){
                max=$(this).height();
            }
        })

        $('.price-clean p').each(function(){
            $(this).css('min-height',max+'px'); 
        })

         $('.price-clean h5').each(function(){
            if($(this).height()>max){
                max=$(this).height();
            }
        })

        $('.price-clean h5').each(function(){
            $(this).css('min-height',max+'px'); 
        })
    })

    function selectNavTab(number, id) {
        $('.nav-tabs > li.active').removeClass('active')
        $('.nav-tabs > li:nth-child('+number+')').addClass('active')
        
        $('.tab-pane.active').removeClass('active')
        $(id).addClass('in active')
    }
</script>
<?php if($selectedPlan && $selectedPlan->package_type == "business"): ?>
<script>
    selectNavTab(2, '#business');
</script>   
<?php endif; ?>

<?php if($selectedPlan && $selectedPlan->package_type == "trainee"): ?>
<script>
    selectNavTab(3, '#students');
</script>   
<?php endif; ?>
