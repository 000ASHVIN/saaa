<?php $__env->startSection('title', 'Email Subscribers'); ?>
<?php $__env->startSection('description', 'List all email subscribers below'); ?>

<?php $__env->startSection('content'); ?>
    <div class="container-fluid container-fullw bg-white">
       <?php if(count($subscribers)): ?>
            <table class="table">
                <thead>
                <th>Email Address</th>
                <th>Signed up</th>
                <th>Remove From List</th>
                </thead>
                <tbody>
                <?php foreach($subscribers as $subscriber): ?>
                    <tr>
                        <td><?php echo $subscriber->email; ?></td>
                        <td><?php echo date_format($subscriber->created_at, 'F d Y'); ?></td>
                        <td>
                            <?php echo Form::open(['Method' => 'Post', 'route' => ['DestroyNewsletterSubscribers', $subscriber->id]]); ?>

                                <?php echo Form::submit('Remove From List', ['class' => 'btn-xs btn btn-danger']); ?>

                            <?php echo Form::close(); ?>

                        </td>
                    </tr>
                <?php endforeach; ?>
                </tbody>
            </table>
           <?php else: ?>
        <p>Sorry, there are no email subscribers from our webiste yet..</p>
       <?php endif; ?>
    </div>
<?php $__env->stopSection(); ?>

