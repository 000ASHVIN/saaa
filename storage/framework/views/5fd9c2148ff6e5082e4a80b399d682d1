<table class="table table-bordered table-striped">
    <thead>
    <th>Full Name</th>
    <th>Email Address</th>
    <th>Date</th>
    <th colspan="3">Status</th>
    </thead>
    <tbody>
    <?php if(count($invites)): ?>
        <?php foreach($invites as $invite): ?>
            <tr>
                <td><?php echo e($invite->first_name.' '.$invite->last_name); ?></td>
                <td><?php echo e($invite->email); ?></td>
                <td><?php echo e(date_format($invite->created_at, 'd F')); ?></td>
                <td><?php echo e(($invite->completed ? "Completed" : "Pending")); ?></td>
                <?php if(! $invite->completed): ?>
                    <td class="text-center"><a data-toggle="tooltip" data-placement="top" title="Resend" onclick="spin(this)" href="<?php echo e(route('dashboard.company.resend_invite', $invite->token)); ?>"><div class="label label-info"><i class="fa fa-refresh"></i></div></a></td>
                    <td class="text-center"><a data-toggle="tooltip" data-placement="top" title="Cancel" onclick="spin(this)" href="<?php echo e(route('dashboard.company.cancel_invite', $invite->token)); ?>"><div class="label label-danger"><i class="fa fa-close"></i></div></a></td>
                <?php endif; ?>
            </tr>
        <?php endforeach; ?>
    <?php else: ?>
        <tr>
            <td colspan="4">You have not send any invitations</td>
        </tr>
    <?php endif; ?>
    </tbody>
</table>