        {$( '.delete' ).bootstrap_confirm_delete(
            {
                debug:    false,
                heading:  'Remove CPD Entry',
                message:  'Are you sure you want to delete this entry?',
                data_type:'post',
                callback: function ( event )
                {
                    var button = event.data.originalObject;
                    button.closest( 'form' ).submit();
                },
            }
        );
        } );
