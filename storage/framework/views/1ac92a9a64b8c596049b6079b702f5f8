    <div class="row">
        <div class="col-md-12">
            <a href="<?php echo e(route('admin.listings.create')); ?>" class="btn btn-info pull-right"><i class="fa fa-pencil"></i> Create a new listing</a>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <?php if(count($listings)): ?>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Listing</th>
                            <th width="10%">Products</th>
                            <th width="2%"></th>
                            <th width="2%"></th>
                        </tr>
                    </thead>
                    <tbody>
                    <?php foreach($listings as $listing): ?>
                        <tr>
                            <td><?php echo e(ucfirst($listing->title)); ?></td>
                            <td><?php echo e(count($listing->products)); ?></td>
                            <td><a class="btn btn-sm btn-info" href="<?php echo e(route('admin.listings.edit',$listing->id)); ?>"><i class="fa fa-pencil"></i></a></td>
                            <td>
                                <?php echo Form::open(['method' => 'DELETE', 'route' => ['admin.listings.destroy', $listing->id]]); ?>

                                <button class="btn btn-sm btn-danger"><i class="fa fa-close"></i></button>
                                <?php echo Form::close(); ?>

                            </td>
                        </tr>
                    <?php endforeach; ?>
                    </tbody>

                </table>
                <hr>
                <?php echo $listings->render(); ?>

            <?php else: ?>
                <p>There are no listings</p>
            <?php endif; ?>
        </div>
    </div>
<?php $__env->stopSection(); ?>

