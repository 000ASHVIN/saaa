                                </thead>
                                <tbody>
                                <?php if(count($invoices)): ?>
                                    <?php foreach($invoices as $invoice): ?>
                                        <tr style="display: table-row;">
                                            <td>
                                                <?php echo e($invoice->created_at->toFormattedDateString()); ?>

                                            </td>
                                            <td>
                                                #<?php echo e($invoice->reference); ?>

                                            </td>
                                            <td>
                                                R <?php echo e($invoice->transactions->where('type', 'debit')->sum('amount') - $invoice->transactions->where('type', 'credit')->sum('amount')); ?>

                                            </td>
                                            <td>
                                                <?php if($invoice->status == 'paid'): ?>
                                                    <a href="" class="label label-success" data-toggle="tooltip" title="Paid" data-placement="right">
                                                        <i class="fa fa-check"></i>
                                                    </a>
                                                <?php else: ?>
                                                    <?php if($invoice->status == 'unpaid'): ?>
                                                        <a href=""
                                                           class="label label-warning" data-toggle="tooltip" title="Unpaid" data-placement="right"> <i class="fa fa-times"></i>
                                                        </a>
                                                    <?php elseif($invoice->status == 'partial'): ?>
                                                        <a href=""
                                                           class="label label-success" data-toggle="tooltip" title="Unpaid" data-placement="right"> <i class="fa fa-times"></i>
                                                        </a>
                                                    <?php else: ?>
                                                        <a href=""
                                                           class="label label-default" data-toggle="tooltip" title="Cancelled" data-placement="right"> <i class="fa fa-ban"></i>
                                                        </a>
                                                    <?php endif; ?>
                                                <?php endif; ?>
                                            </td>
                                            <td class="text-right">
                                                <?php if(count($invoice->creditMemos)): ?>
                                                    <a target="_blank" href="#" data-toggle="modal" data-target="#credit_notes_<?php echo e($invoice->id); ?>" class="label label-default">Credit Notes</a>
                                                    <?php echo $__env->make('dashboard.includes.credit_notes.index', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
                                                <?php endif; ?>
                                                <a target="_blank" href="/invoices/view/<?php echo e($invoice->id); ?>" class="btn btn-primary btn-xs">View</a>
                                                <?php if($invoice->status == 'unpaid' || $invoice->status == 'partial'): ?>
                                                    <a href="/invoices/settle/<?php echo e($invoice->id); ?>"
                                                       class="btn btn-success btn-xs">Settle</a>
                                                <?php endif; ?>
                                            </td>
                                        </tr>
                                    <?php endforeach; ?>
                                <?php else: ?>
                                    <tr>
