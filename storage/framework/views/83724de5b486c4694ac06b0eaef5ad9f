                <th class="text-center">Remove</th>
            </thead>
            <tbody>
            <?php foreach($event->promoCodes as $code): ?>
                <tr>
                    <td><?php echo e(ucfirst($code->title)); ?></td>
                    <td><?php echo e(ucfirst($code->description)); ?></td>
                    <td><?php echo e($code->code); ?></td>
                    <td><?php echo e(ucfirst($code->discount_type)); ?></td>
                    <td><?php echo e($code->discount_amount); ?></td>
                    <td><?php echo e(($code->has_limited_uses ? "Yes" : "No")); ?></td>
                    <td><?php echo e(($code->remaining_uses > 0 ?  $code->remaining_uses : "Unlimited")); ?></td>
                    <td class="text-center"><a href="#" class="label label-info" data-toggle="modal" data-target="#<?php echo e($code->id); ?>_discount_create"><i class="fa fa-pencil"></i></a></td>
                    <td class="text-center"><a data-confirm-content="Are you sure you want to delete the selected code" class="label label-info" href="<?php echo e(route('admin.event.discount.destroy', $code
                    ->code)); ?>">X</a></td>
                </tr>

                <?php echo $__env->make('admin.event.includes.discount.edit', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
