    <div class="row">
        <div class="col-md-12">
            <a href="<?php echo e(route('admin.categories.create')); ?>" class="btn btn-success"><i class="fa fa-user-plus"></i> New Category</a>
            <hr>
         
                <div class="panel-group" id="accordion">
                <?php if(count($categorys)): ?>
                    <?php foreach($categorys as $cat): ?>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#<?php echo e($cat->id); ?>" style="text-transform: capitalize"><?php echo e($cat->slug); ?></a>

                                    <div class="label pull-right"><a href="<?php echo e(route('admin.categories.edit', $cat->slug)); ?>" class="label label-info">Edit</a>
                                    
                                       
                                    
                                    </div>
                                    <div class=" label pull-right">
                                        <?php echo Form::open(['method' => 'POST', 'route' => 'admin.categories.destroy']); ?>

                                        <input type="hidden" name="hdn_category_id" value="<?php echo e($cat->id); ?>" >
                                        <button class="btn btn-sm btn-danger" style="margin-top:-8px;">Delete</button>
                                    <?php echo Form::close(); ?>

                                    </div>
                                    <div class="label label-no-plan pull-right">Categories: <?php echo e(count($cat->childCategory())); ?></div>
                                </h4>
                            </div>
                        
                            <div id="<?php echo e($cat->id); ?>" class="collapse">
                                <div class="">
                                <?php if(count($cat->childCategory())): ?>
									<?php foreach($cat->childCategory() as $category): ?>
										<?php echo $__env->make('admin.blog.categories.category', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
									<?php endforeach; ?>	 
                                    
                                <?php else: ?>
                                        <h4>No category</h4>
                                <?php endif; ?>           
                                </div>
                            </div>
                        </div>
                        <?php endforeach; ?> 
                    <?php endif; ?>
                </div>
            </div>
        </div>
    </div>
</section>

